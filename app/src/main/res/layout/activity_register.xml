<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Welcome Lets get started!!"
        android:textColor="#021161"
        android:textSize="22dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/NameOfApp"
        android:layout_width="289dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/amethysta"
        android:text="Educator Console"
        android:textColor="#021161"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Enter Username :"
        android:textColor="#021161"
        android:textSize="22dp"
        android:textStyle="normal" />
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbox_back"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="22sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Enter Password :"
        android:textColor="#021161"
        android:textSize="22dp"
        android:textStyle="normal" />
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbox_back"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Enter Full Names:"
        android:textColor="#021161"
        android:textSize="22dp"
        android:textStyle="normal" />
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbox_back"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Gender:"
        android:textColor="#021161"
        android:textSize="22dp"
        android:textStyle="normal" />
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbox_back"
        android:padding="5dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="550dp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true" android:text="save"
        android:background="@drawable/loginbutton"/>


</RelativeLayout>